<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- SOS 108 Text -->
    <TextView
        android:id="@+id/sosText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš¨ SOS 108"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Logo ImageView below SOS 108 -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/jipmer_logo"
        android:contentDescription="App Logo"
        app:layout_constraintTop_toBottomOf="@id/sosText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/sosDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Medical Assistance"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />

    <!-- SOS Emergency Button -->
    <Button
        android:id="@+id/sosButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="CALL EMERGENCY"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/sosDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
