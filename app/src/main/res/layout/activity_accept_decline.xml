<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_accept_decline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#ffffff">
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance to patient: "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Distance"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonDecline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF" />
    <EditText
        android:id="@+id/editTextDeclineReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter reason for declining"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#888888"/>

    <Button
        android:id="@+id/buttonSubmitDecline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Reason"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"/>
</LinearLayout>
